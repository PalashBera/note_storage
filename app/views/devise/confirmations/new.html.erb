<% provide(:title, "Resend Confirmation") %>

<div class="row justify-content-center">
  <div class="col-sm-12 mb-4">
    <h3 class="text-center">Resend Confirmation Instructions</h3>
  </div>

  <div class="col-sm-12 col-md-6">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control", autofocus: true, required: true, placeholder: "Email Address", autocomplete: "email" %>
      </div>

      <%= f.submit "Resend Confirmation", class: "btn btn-primary", data: { disable_with: "Sending..." } %>
    <% end %>

    <hr>

    <%= render "devise/shared/links" %>
  </div>
</div>
